{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "vconcat": [
    {
      "mark": "tick",
      "height": 60,
      "width": 800,
      "encoding": {
        "x": {
          "bin": true,
          "field": "circle_length",
          "title": ""
        },
        "color": {
          "field": "category"
        },
        "y": {
          "aggregate": "count",
          "title": ""
        }
      }
    },
    {
      "mark": {
        "type": "circle"
      },
      "height": {
        "step": 60
      },
      "width": 800,
      "transform": [
        {
          "calculate": "datum.prob_present / 2 + random() / 10 - 0.05",
          "as": "jitter"
        }
      ],
      "encoding": {
        "row": {
          "field": "category",
          "type": "ordinal",
          "spacing": 0
        },
        "x": {
          "field": "circle_length",
          "type": "quantitative"
        },
        "y": {
          "field": "jitter",
          "axis": {
            "title": null,
            "labels": false
          }
        },
        "color": {
          "field": "category"
        },
        "opacity": {
          "field": "prob_present"
        },
        "tooltip": [
          {
            "field": "event_id",
            "type": "nominal"
          },
          {
            "field": "regions",
            "type": "nominal"
          },
          {
            "field": "circle_length",
            "type": "quantitative"
          }
        ]
      }
    }
  ],
  "config": {
    "legend": {
      "disable": true
    }
  }
}