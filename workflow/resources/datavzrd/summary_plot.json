{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "resolve": {
    "scale": {
      "x": "shared",
      "y": "independent"
    }
  },
  "bounds": "flush",
  "title": {
    "text": "Circle length histograms and pseudo-scatter plots by category"
  },
  "vconcat": [
    {
      "mark": {
        "type": "bar"
      },
      "height": 100,
      "width": 800,
      "encoding": {
        "x": {
          "field": "category",
          "type": "nominal",
          "sort": [
            "coding",
            "regulatory",
            "intronic",
            "discarded"
          ],
          "scale": {
            "type": "ordinal",
            "scheme": "set1",
            "domain": [
              "coding",
              "regulatory",
              "intronic",
              "discarded"
            ]
          }
        },
        "y": {
          "field": "category",
          "aggregate": "count",
          "title": "circle count",
          "type": "quantitative"
        },
        "color": {
          "field": "category",
          "sort": [
            "coding",
            "regulatory",
            "intronic",
            "discarded"
          ],
          "scale": {
            "type": "ordinal",
            "scheme": "set1",
            "domain": [
              "coding",
              "regulatory",
              "intronic",
              "discarded"
            ]
          }
        },
        "href": {
          "field": "link to category"
        }
      }
    },
    {
      "mark": {
        "type": "tick"
      },
      "height": 150,
      "width": 800,
      "encoding": {
        "x": {
          "bin": true,
          "field": "circle_length",
          "title": ""
        },
        "color": {
          "field": "category"
        },
        "y": {
          "aggregate": "count",
          "title": "count"
        }
      }
    },
    {
      "mark": {
        "type": "circle"
      },
      "height": 200,
      "width": 800,
      "transform": [
        {
          "calculate": "datum.prob_present / 2 + random() / 10 - 0.05",
          "as": "jitter"
        }
      ],
      "encoding": {
        "row": {
          "field": "category",
          "type": "ordinal",
          "spacing": 0
        },
        "x": {
          "field": "circle_length",
          "type": "quantitative",
          "title": "circle length"
        },
        "y": {
          "field": "jitter",
          "axis": {
            "title": null,
            "labels": false
          }
        },
        "color": {
          "field": "category"
        },
        "opacity": {
          "field": "prob_present"
        },
        "tooltip": [
          {
            "field": "event_id",
            "type": "nominal"
          },
          {
            "field": "regions",
            "type": "nominal"
          },
          {
            "field": "circle_length",
            "type": "quantitative"
          }
        ]
      }
    }
  ],
  "config": {
    "legend": {
      "disable": true
    }
  }
}